        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Acme Corp\",\n  \"companyCode\": \"ACME\",\n  \"email\": \"admin@acme.com\",\n  \"password\": \"Admin@123\"\n}"
            }
          }
        },
